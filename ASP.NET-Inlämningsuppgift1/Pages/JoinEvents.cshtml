@page
@model ASP.NET_Inlämningsuppgift1.Pages.JoinEventsModel

@{
    ViewData["Title"] = "Join Events";
}

<h1>Join Events</h1>

<h4>Events</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.Id" />
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Place" class="control-label"></label>
                <input asp-for="Event.Place" class="form-control" />
                <span asp-validation-for="Event.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Spots_Available" class="control-label"></label>
                <input asp-for="Event.Spots_Available" class="form-control" />
                <span asp-validation-for="Event.Spots_Available" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
            <h3>@Model.Message</h3>
        </form>
        <div class="buttons">
            <button onclick="window.location.href='./MyEvents';">
                My Events
            </button>
            <button onclick="window.location.href='./ShowEvents';">
                More Events
            </button>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
